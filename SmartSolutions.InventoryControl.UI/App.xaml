<Application x:Class="SmartSolutions.InventoryControl.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartSolutions.InventoryControl.UI"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:AppBootstrapper x:Key="bootstrapper"/>
                </ResourceDictionary>
                <ResourceDictionary Source="Resources\Colors.xaml"/>
                <ResourceDictionary Source="Resources\Fonts.xaml"/>
                <ResourceDictionary Source="Resources\FontSize.xaml"/>
                <ResourceDictionary Source="Resources\Shapes.xaml"/>
                <ResourceDictionary Source="Resources\Styles\Text.xaml"/>
                <ResourceDictionary Source="Resources\Styles\Button.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ComboBox.xaml"/>
                <ResourceDictionary Source="Resources\Styles\CheckBox.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ListView.xaml"/>
                <ResourceDictionary Source="Resources\ControlDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
