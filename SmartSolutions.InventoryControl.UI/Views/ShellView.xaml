                                                            <Setter Property="Background" Value="#efefef" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                        </Button>
                                        <Button  ToolTip="Close" Click="CloseClick"  Content="X" >
                                            <Button.Style>
